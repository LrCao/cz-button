{
  "defaultSeverity": "none",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "semicolon": [
    false,
    "always"
  ],
  "arrow-parens": [
    false,
    "as-needed"
  ],
  "rules": {
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "no-console": false,
    "semicolon": [
      false,
      "always"
    ],
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "ignore",
        "arrays": "ignore",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }]
  }
}